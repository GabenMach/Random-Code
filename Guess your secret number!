x= 100
minz=0
maxz=100
iterations=0
print("Think of a number between 0 and 100!")
while True:
    ans =int ((minz + maxz) / 2)
    print("Is your secret number "+ str(ans) +"?")
    inputz= str(input())
    iterations+=1
    if inputz=='l':
        minz=ans
    elif inputz== 'h':
        maxz=ans
    elif inputz== 'c':    
        break
    else:
        print("I can't understand it.")
        
print("Secret number== "+str(ans))
